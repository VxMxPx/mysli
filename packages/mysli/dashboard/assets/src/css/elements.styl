.mysli.styled

    .field
        margin-bottom: 20px

    fieldset
        border: none
        margin-bottom: 10px
        .field
            margin-bottom: 10px

    input[type='text'],
    input[type='password']
        border: none
        box-shadow: inset 0 3px 0 rgba(0, 0, 0, .1)
        padding: 14px
        border-radius: 2px
        &:focus
            box-shadow: inset 0 3px 0 rgba(120, 160, 240, .8)

    button
        border-radius: 2px
        font-size: font-size-normal
        cursor: pointer
        padding: 6px 8px
        border: none
        box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .1)
        &:active
            box-shadow: inset 0 3px 0 rgba(0, 0, 0, .1)
        &.primary
            color: #f1f1f0
            background-color: #419945
