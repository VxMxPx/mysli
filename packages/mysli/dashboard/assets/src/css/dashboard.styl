*
    padding: 0
    margin: 0

html
    height: 100%

body
    height: 100%
    background: url(../../common/img/main-background.gif) left top repeat
    font-family: font
    color: color-font-primary
    font-size: font-size-normal

.panel
    position: relative
    height: 100%
    overflow: visible
    box-shadow: 2px 0 2px rgba(0, 0, 0, .2)
    color: #fff
    &.navigation
        width: 180px
        &.main
            background-color: #333
            a
                color: #fff
            .footer
                width: 100%
                height: 60px
                background-color: #222
                position: absolute
                bottom: 0
