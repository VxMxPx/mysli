box-width = 280px

*
    padding: 0
    margin: 0

body
    background-color: color-background-primary
    font-family: font
    color: color-font-primary
    font-size: font-size-normal

h1
    text-align: center
    display: block
    width: box-width
    margin: 60px auto 0 auto
    font-weight: normal
    font-size: font-size-huge
    small
        margin-top: -15px
        font-size: font-size-large
        display: block

.box
    background-color: #333333
    padding: 30px
    border-radius: 2px
    width: box-width
    margin: 30px auto

input[type=text],
input[type=password]
    width: 280px - 28px

button
    padding-left: 0
    padding-right: 0
    width: 280px

.logo
    width: 90px
    height: 45px
    margin: 0 auto
    a
        width: inherit
        height: inherit
        display: block
        background: url('../../common/img/mysli-logo-mini.png') no-repeat center transparent
        span
            display: none
