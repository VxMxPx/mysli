        "@cli"         : ">= 1",
        "@event"       : ">= 1",
        "mysli/config" : ">= 1",
        "mysli/web"    : ">= 1"
    },

    "factory" : {
        "assets"        : "singleton(mysli/web, mysli/config)",
        "setup"         : "construct(@event, mysli/config)",
        "script/assets" : "construct(mysli/web)"
    },

