@import "variables"

.popup.menu
    .field.item
        padding: 0
        margin: 20px
    hr.item
        padding: 0
        margin-top: 10px
        border-bottom: 1px solid color-border
        margin-bottom: 10px
    .item
        position: relative
        padding: 5px 20px
        margin: 10px 0
        color: color-font
        display: block
    a.item
        text-decoration: none
        &:focus
            outline: none
        &:hover
            text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)
            background-color: color-selected
            color: color-selected-font
        &:active
            top: 3px

.popup.menu.alt
    hr.item
        border-bottom: 1px solid color-border-alt
    .item
        color: color-font-alt
    a.item
        &:hover
            background-color: color-selected-alt
            color: color-selected-font-alt
