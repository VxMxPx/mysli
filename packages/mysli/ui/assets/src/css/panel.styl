@import "variables"

.panel
    height: 100%
    position: absolute
    background-color: color-background-box
    box-shadow: 5px 0 10px rgba(0, 0, 0, .1)
    // opacity: 0
    // float: left
    color: color-font
    border-right: 1px solid color-border
    & > div.loading
        position: absolute
        z-index: 100
        width: 10px
        height: 100%
        width: 100%
        top: 0
        left: 0
        // bottom: 0
        // right: -1px
        background: url(../../common/img/panel-loading.gif) repeat-y right top #000
        opacity: .75
    &.selected header
        border-top: 3px solid color-selected-border
    &.multi
        perspective: 900px
        -webkit-perspective: 900px
        background-color: transparent
        box-shadow: none
        border-right: none
        &.flipped > .sides
            transform: rotateY(180deg)
            -webkit-transform: rotateY(180deg)
        & > .sides
            transition: transform .3s linear
            -webkit-transition: -webkit-transform .3s linear
            transform-style: preserve-3d
            -webkit-transform-style: preserve-3d
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            & > .side
                // z-index: inherit
                width: 100%
                height: 100%
                backface-visibility: hidden
                -webkit-backface-visibility: hidden
                position: absolute
                top: 0
                left: 0
                &:first-child
                    transform: rotateY(0deg)
                    -webkit-transform: rotateY(0deg)
                    z-index: 2
                &:last-child
                    transform: rotateY(180deg)
                    -webkit-transform: rotateY(180deg)
    header
        position: relative
        background-color: color-background-el
        font-size: font-size-normal
        overflow: hidden
        padding: 10px 0
        border-bottom: 1px solid rgba(255, 255, 255, .4)
        box-shadow: inset 0 -1px 0 color-border
        border-top: 0px solid color-selected-border
        min-height: 46px
        transition: border .2s linear
        -webkit-transition: border .2s linear
        a
            position: absolute
            top: 10px
            z-index: 1
            color: color-font-fade
        .left
            left: 20px
        .right
            right: 20px
        h2
            z-index: 0
            position: relative
            font-size: font-size-normal
            text-align: center
            margin: 0
    .body .inner
        padding: 20px
    footer
        background-color: color-background-el
        font-size: font-size-normal
        overflow: hidden
        border-top: 1px solid rgba(255, 255, 255, .4)
        box-shadow: inset 0 1px 0 color-border
        width: 100%
        position: absolute
        bottom: 0
        padding: 10px 0
    &.alt
        background-color: color-background-box-alt
        color: color-font-alt
        border-color: color-border-alt
        &.selected header
            border-top: 3px solid color-selected-border-alt
        header
            background-color: color-background-el-alt
            border-bottom: 1px solid rgba(255, 255, 255, .1)
            box-shadow: inset 0 -1px 0 #101010
            a
                color: color-font-fade-alt
        footer
            background-color: color-background-el-alt
            border-top: 1px solid rgba(255, 255, 255, .1)
            box-shadow: inset 0 1px 0 #101010
