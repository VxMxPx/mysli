box-width = 340px
color-background-primary = #202020
color-font-primary       = #f8f8f8

// font = sans-serif

font-size-huge   = 40px
font-size-large  = 20px
font-size-normal = 18px
font-size-small  = 14px

*
    padding: 0
    margin: 0

body
    background: color-background-primary
    color: color-font-primary
    // font-size: font-size-normal

h1
    text-align: center
    display: block
    width: box-width
    margin: 60px auto 0 auto
    font-weight: normal
    // font-size: font-size-huge
    small
        margin-top: 10px
        font-size: font-size-large
        display: block

.box
    color: #fff
    background-color: #333333
    padding: 30px
    border-radius: 2px
    width: box-width
    margin: 30px auto
    .alert
        margin-bottom: 20px

input[type=text],
input[type=password]
    width: 100%

button
    padding-left: 0
    padding-right: 0
    width: 100%

.logo
    width: 90px
    height: 45px
    margin: 0 auto
    a
        width: inherit
        height: inherit
        display: block
        background: url('../../common/img/mysli-logo-mini.png') no-repeat center transparent
        span
            display: none
