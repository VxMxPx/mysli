@import "variables"

.ui-button
    // font-size: 12px
    // font-weight: bold
    text-transform: uppercase
    border: 2px solid #fff
    border-radius: 3px
    padding: 8px 10px
    display: block
    //text-shadow: 1px 1px 1px rgba(0, 0, 0, .2)
    &:active
        padding: 10px 10px 6px 10px
    &:disabled
        text-shadow: none
        opacity: .3
        &:active
            padding: 8px 10px
    &:focus
        outline: none
    &::-moz-focus-inner
        border: 0
    span.label + i.fa,
    i.fa + span.label
        margin-left: 6px
    // Styles -----------------------------
    &.style-default.style-flat,
    &.style-alt.style-flat,
    &.style-primary.style-flat,
    &.style-confirm.style-flat,
    &.style-attention.style-flat
        text-shadow: none
        background: transparent
        border-color: transparent
        &:focus,
        &:hover,
        &:active,
        &:disabled
            background: transparent
            border-color: transparent
    &.style-default
        background: #fff
        border-color: #dedede
        text-shadow: none
        &.style-flat
            color: #5a5a5a
        &:hover
            background: #f4f4f4
            border-color: #dedede
        &:focus
            border-color: #00a07b
        &:active
            background: #e8e8e8
            border-color: #c0c0c0
        &:disabled
            background: #dedede
            border-color: #dedede
            // color: #acadab
    &.style-alt
        color: #f7f7f7
        background: #686060
        border-color: #726a6a
        &.style-flat
            color: #f7f7f7
        &:hover
            background: #5e5656
            border-color: #544c4c
        &:focus
            border-color: #00a07b
        &:active
            background: #544c4c
            border-color: #4a4242
        &:disabled
            background: #6e6e6e
            border-color: #6e6e6e
            // color: #9e9e9e
    &.style-primary
        color: #f7f7f7
        background: #3eadfe
        border-color: #22a0fe
        &.style-flat
            color: #22a0fe
        &:hover
            background: #22a0fe
            border-color: #018cf7
        &:focus
            border-color: #0168b3
        &:active
            background: #018cf7
            border-color: #017edb
        &:disabled
            background: #93a0a9
            border-color: #93a0a9
            // color: #64747f
    &.style-confirm
        color: #f7f7f7
        background: #32b810
        border-color: #2da410
        &.style-flat
            color: #2da410
        &:hover
            background: #2da410
            border-color: #289010
        &:focus
            border-color: #1e6e0a
        &:active
            background: #289010
            border-color: #278010
        &:disabled
            background: #839a7e
            border-color: #839a7e
            // color: #777874
    &.style-attention
        color: #f7f7f7
        background: #c94f13
        border-color: #ad4b13
        &.style-flat
            color: #ad4b13
        &:hover
            background: #ad4b13
            border-color: #8d3b13
        &:focus
            border-color: #793113
        &:active
            background: #8d3b13
            border-color: #7d3313
        &:disabled
            background: #b4a0a0
            border-color: #b4a0a0
