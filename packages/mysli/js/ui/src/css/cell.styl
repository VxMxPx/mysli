@import "variables"

.ui-cell
    &.scroll-x
        overflow-x: auto
    &.scroll-y
        overflow-y: auto
        height: 100%
    &.content-fill *:first-child
        width: 100%
    &.align-right
        text-align: right
    &.align-left
        text-align: left
    &.padtop
        padding-top: 15px
    &.padbottom
        padding-bottom: 15px
    &.padleft
        padding-left: 15px
    &.padright
        padding-right: 15px
