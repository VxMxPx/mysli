@import "variables"

.ui-tabbar
    color: #fff
    background-color: #9c3c18
    & .ui-cell
        & > .ui-button.style-flat
            font-size: 16px
            color: #ebd7d0
            text-transform: none
            padding: 11px 0 8px 0
            text-align: center
            width: 100%
            border-radius: 0
            border-top: none
            border-right: 1px solid #6e2b11
            border-bottom: 3px solid #6e2b11
            border-left: none
            float: left
            &.pressed
                color: #fff
                padding-top: 12px
                padding-bottom: 10px
                background-color: #6e2b11
                border-top: none
                border-right: 1px solid #b56d52
                border-bottom: none
                border-left: none
                box-shadow: inset 0 0 4px rgba(0, 0, 0, .4)
        &:last-child
            & > .ui-button.style-flat, & > .ui-button.style-flat.pressed
                border-right: none
