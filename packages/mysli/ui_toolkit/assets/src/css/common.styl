@import "variables"

*
    padding: 0
    margin: 0

*, *:before, *:after
    -moz-box-sizing: border-box
    -webkit-box-sizing: border-box
    box-sizing: border-box

body
    font-family : font-family
    font-size   : font-size-normal
    line-height : 1.4em

h1, h2, h3, h4, h5, h6
    font-family: font-family-headers
    font-weight: normal
    margin-top: 20px
    margin-bottom: 10px
    small
        font-size: 75%

h1
    font-size: 36px

h2
    font-size: 30px

.default
    color : color-font
.alt
    color : color-font-alt

.spaced
    padding: 20px

.s-left
    margin-left: 10px
.s-right
    margin-right: 10px

.to-left
    text-align: left
.to-center
    text-align: center
.to-right
    text-align: right

a
    color: #24a
.alt
    a
        color: #68e

code, .code
    font-family: Menlo, Monaco, Consolas, "Courier New", monospace
    font-size: font-size-small
    background-color: #fdf6e3
    color: #002b36
    &.alt
        background-color: #073642
        color: #fdf6e3
code
    line-height: 1.2em
    padding: 10px 20px
    border-bottom: 2px solid #eee8d5
    &.alt
        border-bottom: 2px solid #002b36
pre code
    display: block
    overflow: hidden

.container
    background-color: color-background
    &.alt
        background-color: color-background-alt

small
    font-size: font-size-small

.fade
    color: color-font-fade
.fade-real
    opacity: .5

.close:before
    display: inline-block;
    font-family: FontAwesome;
    font-style: normal;
    font-weight: normal;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    content: "\f00d"
    text-decoration: none
