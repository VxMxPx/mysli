.panel
    width: 250px
    height: 100%
    position: relative
    background-color: color-background-box
    box-shadow: 5px 0 10px rgba(0, 0, 0, .1)
    float: left
    color: color-font
    border-right: 1px solid color-border
    &.multi
        perspective: 900px
        -webkit-perspective: 900px
        background-color: transparent
        box-shadow: none
        border-right: none
        &.flipped > .sides
            transform: rotateY(180deg)
            -webkit-transform: rotateY(180deg)
        & > .sides
            transition: transform .3s linear
            -webkit-transition: -webkit-transform .3s linear
            transform-style: preserve-3d
            -webkit-transform-style: preserve-3d
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            & > .side
                // z-index: inherit
                width: 100%
                height: 100%
                backface-visibility: hidden
                -webkit-backface-visibility: hidden
                position: absolute
                top: 0
                left: 0
                &:first-child
                    transform: rotateY(0deg)
                    -webkit-transform: rotateY(0deg)
                    z-index: 2
                &:last-child
                    transform: rotateY(180deg)
                    -webkit-transform: rotateY(180deg)
    header
        position: relative
        background-color: color-background-el
        font-size: font-size-normal
        overflow: hidden
        padding: 10px 0
        a
            position: absolute
            top: 10px
            z-index: 1
            color: color-font-fade
        .left
            left: 20px
        .right
            right: 20px
        h2
            z-index: 0
            position: relative
            font-size: font-size-normal
            text-align: center
            margin: 0
    &.inverse
        background-color: color-background-box-inverse
        color: color-font-inverse
        border-color: color-border-inverse
        header
            background-color: color-background-el-inverse
            a
                color: color-font-fade-inverse
