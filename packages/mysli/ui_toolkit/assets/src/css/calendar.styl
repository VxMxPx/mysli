@import "variables"

.calendar
    border-radius: 4px
    margin: 5px
    display: block
    caption
        padding: 10px
        background-color: color-background-el
        border-bottom: 1px solid color-border
        border-top: 1px solid color-background-box
        position: relative
        a
            position: absolute
            text-decoration: none
            &.left, &.right
                float: none
            &.left
                left: 20px
            &.right
                right: 20px
    tr th
        font-size: font-size-small
        border-top: 1px solid color-background-box
        border-bottom: 1px solid color-border
    tr td, tr th
        text-align: center
        padding: 8px
    tr td
        cursor: pointer
    tr td:hover, &.zebra tr:nth-child(even) td:hover
        background-color: color-selected
        color: color-selected-font
        border-radius: 3px
    tr td.today
        font-weight: bold
    .disabled
        background-color: color-background-el
        color: color-font-fade
        &:hover
            background-color: color-background-el
            color: color-font-fade
            border-radius: 0
            cursor: default

.calendar.alt
    caption
        background-color: color-background-el-alt
        border-bottom: 1px solid color-border-alt
        border-top: 1px solid color-background-box-alt
    tr th
        border-top: 1px solid color-background-box-alt
        border-bottom: 1px solid color-border-alt
    tr td:hover, &.zebra tr:nth-child(even) td:hover
        background-color: color-selected-alt
        color: color-selected-font-alt
    .disabled
        background-color: color-background-el-alt
        color: color-font-fade-alt
        &:hover
            background-color: color-background-el-alt
            color: color-font-fade-alt
