.menu
    position: absolute
    max-width: 200px
    background-color: color-background-box
    padding: 10px
    border-radius: 8px
    box-shadow: 0 0 8px rgba(0,0,0,.2)
    hr.item
        padding: 0
        margin-top: 10px
        border-bottom: 1px solid color-border
        margin-bottom: 10px
    .item
        position: relative
        padding: 5px 10px
        color: color-font
        display: block
    a.item
        text-decoration: none
        &:hover
            background-color: #6ee
            border-radius: 4px
