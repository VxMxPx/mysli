.tabs
    position: relative
    background-color: color-background-el
    padding-top: 10px
    font-size: font-size-small
    box-shadow: inset 0 -4px 4px -4px rgba(0, 0, 0, .2)
    &.center
       text-align: center
    .tab
        padding: 5px 20px
        margin: 0
        display: inline-block
        user-select: none
        color: color-font
        position: relative
        text-decoration: none
        // border-left: 1px solid color-border
        // border-right: 1px solid color-background-box
        &:last-child
            border-right: none
        &.active
            border-radius: 3px 3px 0 0
            background-color: color-background-box
            border: none
            border-top: 3px solid color-selected-border
.alt > .tabs, .tabs.alt
    background-color: color-background-el-alt
    .tab
        color: color-font-alt
        &.active
            border-top-color: color-selected-border-alt
            background-color: color-background-box-alt
