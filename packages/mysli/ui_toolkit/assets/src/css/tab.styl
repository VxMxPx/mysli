.tabs
    position: relative
    background-color: color-background-el
    font-size: font-size-small
    box-shadow: inset 0 -4px 4px -4px rgba(0, 0, 0, .2)
    &.center
       text-align: center
    .tab
        padding: 5px 20px
        margin: 0
        display: inline-block
        user-select: none
        color: color-font
        position: relative
        text-decoration: none
        // border-left: 1px solid color-border
        // border-right: 1px solid color-background-box
        &:last-child
            border-right: none
        &.active
            border-radius: 3px 3px 0 0
            background-color: color-background-box
            border: none
            border-top: 3px solid color-field-selected
.inverse > .tabs
    background-color: color-background-el-inverse
    .tab
        color: color-font-inverse
        // border-right-color: color-background-box-inverse
        &.active
            background-color: color-background-box-inverse
