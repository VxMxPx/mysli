button, .button
    font-size: font-size-normal
    border-radius: 3px
    text-decoration: none
    cursor: pointer
    padding: 6px 8px
    border: none
    box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .1)
    background-color: color-background-box
    &:active
        box-shadow: inset 0 3px 0 rgba(0, 0, 0, .1)
    &.inverted
        background-color: color-background-box-inverted
    &.primary
        color: #f1f1f0
        background-color: #419945
    &.attention
        color: #f0f1f1
        background-color: #994541
