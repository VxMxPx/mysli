@import "variables"

button, .button, a.button
    font-size: font-size-normal
    border-radius: 3px
    text-decoration: none
    cursor: pointer
    padding: 6px 10px 9px 10px
    border: none
    box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .3)
    background-color: #eee
    display: inline-block
    user-select: none
    color: color-font
    position: relative
    text-align: center
    line-height: font-size-normal
    &:focus
        background-color: #f4f4f4
        box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .2)
        outline: none
    &::-moz-focus-inner
        border: 0
    &.alt
        background-color: #555
        color: color-font-alt
        &:focus
            background-color: #5e5e5e
            color: #fff
        &:disabled
            background-color: #ccc
            color: #999
    &.primary
        color: #e1ffe0
        background-color: #419945
        &:focus
            background-color: #4aa24e
            color: #fff
    &.attention
        color: #f0f1f1
        background-color: #994541
        &:focus
            background-color: #a24f4a
            color: #fff
    &.pressed, &:active
        outline: 0
        box-shadow: inset 0 1px 0 rgba(0, 0, 0, .1),
                    inset 0 3px 0 rgba(0, 0, 0, .1)
        padding: 6px 10px 6px 10px
        //top: 3px
        margin-top: 3px
    &:disabled
        background-color: #ccc
        box-shadow: none
        color: #999
        cursor: default
        top: 0
        margin-top: 0
        padding: 6px 10px 9px 10px
    i.fa + span, span + i.fa
        margin-left: 5px
.group
    position: relative
    button, .button
        margin-left: 0
        margin-right: 0
        border-radius: 0
        float: left
        box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .3),
                    inset 1px 0 0 0 rgba(0, 0, 0, .2),
                    inset -1px 0 0 0 rgba(255, 255, 255, .2)
        &.pressed, &:active
            box-shadow: inset 1px 0 0 0 rgba(0, 0, 0, .2),
                        inset -1px 0 0 0 rgba(255, 255, 255, .2),
                        inset 0 3px 0 0 rgba(0, 0, 0, .3)
        &:first-child
            border-radius: 3px 0 0 3px
            box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .3),
                        inset -1px 0 0 0 rgba(255, 255, 255, .2)
            &:active
                box-shadow: inset -1px 0 0 0 rgba(255, 255, 255, .2),
                            inset 0 3px 0 0 rgba(0, 0, 0, .3)
        &:last-child
            border-radius: 0 3px 3px 0
            box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .3),
                        inset 1px 0 0 0 rgba(0, 0, 0, .2)
            &:active
                box-shadow: inset 1px 0 0 0 rgba(0, 0, 0, .2),
                            inset 0 3px 0 0 rgba(0, 0, 0, .3)
        &:disabled, &.disabled:active
            box-shadow: none
