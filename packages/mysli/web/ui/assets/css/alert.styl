@import "variables"

.alert
    .message
        padding: 8px 8px
        border-radius: 4px
        // box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .1)
        font-size: font-size-small
        color: #fff
        margin-bottom: 5px
        // text-shadow: 1px 1px 0 rgba(0, 0, 0, .2)
        position: relative
        .close
            color: #fff
            position: absolute
            top: 8px
            right: 10px
        .spinner
            text-shadow: none
            font-size: font-size-normal
            margin-right: 5px
            margin-left: 5px
        &.warn
            background-color: #E67B1A
        &.error
            background-color: #C42635
        &.info
            // text-shadow: 1px 1px 0 rgba(255, 255, 255, .2)
            background-color: #4282b2
            // color: #EAF3F9
        &.success
            background-color: #348A00
