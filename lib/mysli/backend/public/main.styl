$color_base = #f8f8f3
$color_box  = #ecece0
$color_font_base = #333

$padding_default = 20px

*
    padding: 0
    margin: 0

body
    background-color: $color_base
    color: $color_font_base
    font-family: sans-serif
    font-size: 18px

.box
    width: 320px
    margin: $padding_default * 4 auto 0 auto
    padding: $padding_default
    background-color: $color_box
    border-radius: 3px
    overflow: hidden

.half
    width: 50%

.left
    float: left

.right
    float: right

a
    color: #46a
    text-decoration: underline
    &:hover
        text-decoration: none
        background-color: #46a
        color: #fff

hr
    margin: $padding_default 0
    border: none
    border-bottom: 1px solid rgba(255, 255, 255, .3)
    border-top: 1px solid rgba(0, 0, 0, .1)

h1
    text-align: center

h1, h2, h3
    color: #555
    font-weight: normal

::-webkit-input-placeholder
    line-height: 22px
    font-size: 14px
    color: #666
:-moz-placeholder
    line-height: 22px
    font-size: 14px
    color: #666
::-moz-placeholder
    line-height: 22px
    font-size: 14px
    color: #666
:-ms-input-placeholder
    line-height: 22px
    font-size: 14px
    color: #666

form
    .merge
        margin-bottom: $padding_default
        .field
            margin-bottom: 0
            input
                border-style: solid
                border-width: 0 2px 2px 0
                border-color: rgba(0, 0, 0, .3)
                border-bottom: 1px dotted rgba(0, 0, 0, .3)
                border-radius: 0
            &:first-child input
                border-radius: 3px 3px 0 0
            &:last-child input
                border-radius: 0  0 3px 3px
                border-bottom-width: 2px
                border-bottom-style: solid
    .field
        width: 100%
        margin-bottom: $padding_default
        .half
            width: 50%
        &.checkbox
            font-size: 14px
            label
                cursor: pointer
        &:last-child
            margin-bottom: 0
        input
            width: 320px - 10px
            border: none
            font-size: 18px
            color: $color_font_base
            background-color: #fff
            padding: 4px
            border-radius: 3px
            border-bottom: 2px solid rgba(0, 0, 0, .3)
            &:focus
                outline: none
                border-color: rgba(0, 20, 40, .5)
        button
            color: $color_font_base
            background-color: #dcdcd0;
            border-style: solid
            border-width: 0 2px 2px 0
            border-color: rgba(0, 0, 0, .3)
            font-size: 18px
            width: 100%
            padding: 10px 0
            border-radius: 3px
            cursor: pointer
            &::-moz-focus-inner
                border: none
            &:active
                outline: 0
                border-width: 2px 0 0 2px

.messages
    font-size: 14px
    margin-bottom: $padding_default
    p
        padding: 10px
        margin-bottom: 2px
        border-radius: 3px
        // border-style: solid
        // border-width: 0 2px 2px 0
        // border-color: rgba(0, 0, 0, .3)
        color: #fff
        &:last-child
            margin-bottom: 0
        &.error
            background-color: #b44
        &.success
            background-color: #4a1
        &.info
            background-color: #59b
        &.warn
            background-color: #e90

.cancel
    line-height: 44px
    text-align: center
    font-size: 14px

label:active .checkbox_styled
    background-color: #fff
    border-width: 2px 0 0 2px
    outline: none

.checkbox_styled
    display: inline-block
    height: 18px
    width: 18px
    background-color: white
    border-radius: 3px
    margin-right: 2px
    cursor: pointer
    position: relative
    margin-bottom: -4px
    border-style: solid
    border-width: 0 2px 2px 0
    border-color: rgba(0, 0, 0, .3)
    &:hover,
    &:focus
        outline: none
        background-color: #fff
    &:active
        background-color: #fff
        border-width: 2px 0 0 2px
        outline: none
    &.on:before
        font-size: 14px
        color: rgba(0, 20, 40, .5)
        content: "Ã—"
        position: absolute
        text-align: center
        font-weight: bold
        width: 18px
        height: 16px
        top: 1px

small
    font-size: 12px

p
    margin-bottom: 20px

// Main
.panel
    position: fixed
    height: 100%
    box-shadow: 0 0 4px rgba(0, 0, 0, .4)
    background-color: $color_box
    overflow-y: scroll
    &.small
        width: 250px
    &.medium
        width: 500px
    &.dark
        background-color: #333
        color: #eee
        a
            color: #def
            &:hover
                background-color: transparent
    &#main
        z-index: 9999
        .user-profile
            padding: 10px
            position: relative
            border-bottom: 1px solid rgba(255, 255, 255, .1)
            box-shadow: inset 0 -1px 0px rgba(0, 0, 0, .2)
            .name
                font-size: 28px
            img.avatar
                position: absolute
                max-height: 32px
                border-radius: 40px
                display: inline-block
                right: 10px
                top: 12px
            .options
                display: block
    .list-view
        .button
            padding: 10px
            border-bottom: 1px solid rgba(255, 255, 255, .1)
            box-shadow: inset 0 -1px 0px rgba(0, 0, 0, .2)
            a
                text-decoration: none
            &.selected
                background-color: rgba(0, 0, 0, .2)