#!/usr/bin/env php
<?php
// This is a shortcut for when ./dot is not in phar format, it save you typing
// ./dot/__init.php instead it can be run as for example: ./dot/me install.
namespace dot\root; function __init()
{

    // This **CANNOT** be run from withing PHAR,
    // so no need to adjust paths for PHAR.
    $phar_cli = __DIR__.'/__init.php';

    // Include phar init file...
    if (file_exists($phar_cli))
        include $phar_cli;
    else
        trigger_error("Not found: `{$phar_cli}`", E_USER_ERROR);

}__init();
